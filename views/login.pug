extends base

block content
  main.relative(class='p-3 bg-[#f7f7f7] lg:p-20')
    .login-form
      form(action="" method="" enctype="multipart/form-data" id='login-form')
        -if(message) 
          h1.mb-3.text-red-500=message
        span(class="inline-block mb-3  text-center text-xs xl:text-base text-neutral-400") Please enter your email and password to continue
        div(class="mb-4")
          label(for='email' class='block mb-1 font-medium text-gray-800') Email Address
          input(id='email' required type="email" placeholder="Enter your email" name="email" class="inline-block w-full px-4 py-3 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary")
        div(class="mb-4")
          label(for='password' class='block mb-1 font-medium text-gray-800') Password
          input(id='password' required type="password" placeholder="Enter your password" name="password" class="inline-block w-full px-4 py-3 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary")
        div(class="mb-3 flex justify-end")
          button(id='login-btn' class="transition-all inline-flex items-center gap-x-2 duration-100 hover:bg-primary-light bg-primary rounded cursor-pointer text-white py-2 px-4") LOGIN
