mixin commentCard(comment)
    li(class="comment lg:pb-7 lg:pl-24 float-left relative mb-10 w-full border-b border-b-[#eee]")
        div(class="comment-author absolute top-5 left-[30px] w-10 h-10 lg:top-0 lg:left-4 lg:w-20 lg:h-20 z-[20]")
            img(src='/images/default.jpg' class="h-10 w-10 lg:h-14 lg:w-14 rounded-full float-left")

        div(class="comment-body float-left w-full relative py-6 px-8 bg-[#f9f9f9] rounded-sm border border-[#eee]")
            h4(class="author-name text-base font-bold mb-3 ml-12 lg:ml-0 float-left")= comment.author
            div(class="clear-both table")
            p=comment.comment

            div(class="flex mt-10 relative")
                div(class="comment-meta")
                    i(class="fa fa-clock inline mr-1 text-primary")
                    - const date = new Date(comment.createdAt).toLocaleDateString('en-us', {day:'numeric', month: 'long', year: 'numeric'})
                    |#{date}

                div(class="hidden lg:block h-[1px] bg-[#d9d9d9] w-[300px] absolute left-[180px] right-[150px] bottom-[1rem]")
                div(class="text-end flex-grow")
                    a(href="" class="inline-block py-2 px-5 bg-[#292929] font-medium text-[10px] rounded-sm text-white")
                        i(class="fa fa-reply inline mr-1 text-primary")
                        | Reply