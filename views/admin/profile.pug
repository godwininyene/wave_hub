extends base
block content 
    .user-view__content(class='lg:py-16')
        .user-view__form-container.max-w-2xl(class='lg:px-20')
            h2.text-2xl.mb-7.uppercase.font-bold Your account settings
            //- WITHOUT API
            //- form.form.form-user-data(action="/submit-user-data", method="POST")

            //- WITH API
            form.form.form-user-data
                .form__group.mb-6
                    label.block.mb-1.font-medium(for='name') Name
                    input#name.form__input(class="finline-block w-full px-4 py-2 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary" type='text', value=`${user.name}`, required, name='name')
                .form__group.mb-7
                    label.block.mb-1.font-medium(for='email') Email address
                    input#email.form__input(class="inline-block w-full px-4 py-2 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary" type='email', value=`${user.email}`, required, name='email')
                .form__group.form__photo-upload.flex.items-center.mb-6
                    img.form__user-photo(class='w-[75px] h-[75px] mr-5 rounded-full'  src=`/images/users/${user.photo}`, alt=`Photo of ${user.name}`)
                    input.form__upload(type='file', accept='image/*' id='photo', name='photo')
                    label(for="photo") Choose new photo
                .form__group.right.text-right
                    button(id='save-data-btn' class=' transition-all inline-flex items-center gap-x-2 duration-100 hover:bg-primary-light bg-primary rounded cursor-pointer text-white py-2 px-4') 
                        |Save settings
                        
        .line.w-full.my-9(class='h-[1px] bg-[#e0e0e0] lg:my-24') &nbsp;
        .user-view__form-container.max-w-2xl(class='lg:px-20')
            h2.text-2xl.mb-7.uppercase.font-bold Password change
            form.form.form-user-password
                .form__group.mb-6
                    label.block.mb-1.font-medium(for='password-current') Current password
                    input#password-current.form__input(class="inline-block w-full px-4 py-2 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary" type='password', placeholder='••••••••', required, minlength='8')
                .form__group.mb-7
                    label.block.mb-1.font-medium(for='password') New password
                    input#password.form__input(class="inline-block w-full px-4 py-2 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary" type='password', placeholder='••••••••', required, minlength='8')
                .form__group.mb-7
                    label.block.mb-1.font-medium(for='password-confirm') Confirm password
                    input#password-confirm.form__input(class="inline-block w-full px-4 py-2 bg-[#f0f0f0] border border-transparent rounded transition-all duration-100 focus:outline-0 focus:border-primary" type='password', placeholder='••••••••', required, minlength='8')
                .form__group.text-right
                    button(id='save-password-btn' class='transition-all inline-flex items-center gap-x-2 duration-100 hover:bg-primary-light bg-primary rounded cursor-pointer text-white py-2 px-4') Save password
